<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 질문 텍스트 -->
    <TextView
        android:id="@+id/questionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 사용중인 안드로이드 버전은?"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="20dp"/>

    <!-- 라디오 버튼 그룹 -->
    <RadioGroup
        android:id="@+id/versionGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionText"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_marginTop="40dp">

        <RadioButton
            android:id="@+id/version3_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.0"
            android:textSize="16sp"/>

        <RadioButton
            android:id="@+id/version2_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.0"
            android:textSize="16sp"/>

        <RadioButton
            android:id="@+id/version5_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.0"
            android:textSize="16sp"/>
    </RadioGroup>

    <!-- DISPLAY IMAGE 버튼 -->
    <Button
        android:id="@+id/displayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DISPLAY IMAGE"
        android:layout_below="@id/versionGroup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <!-- 이미지를 표시할 공간 -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/displayButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

</RelativeLayout>
